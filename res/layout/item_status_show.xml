<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="blocksDescendants"
    android:paddingLeft="15dp"
    android:paddingRight="20dp"
    android:paddingBottom="10dp">

    <ImageButton 
        android:id="@+id/ssComAvatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:focusable="false"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
	    android:background="#00000000"
	    android:contentDescription="@string/app_name"
        android:src="@drawable/ic_launcher"/>

    <TextView
        android:id="@+id/ssComCreateAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
		android:layout_alignTop="@id/ssComAvatar"
		android:textColor="#808080"
	    android:textSize="12sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/ssComScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ssComAvatar"
        android:layout_alignTop="@id/ssComAvatar"
        android:layout_marginLeft="17dp"
        android:textColor="#000000"
        android:text="ssComScreenName" />

    <TextView
        android:id="@+id/ssComText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/ssComScreenName"
        android:layout_below="@+id/ssComScreenName"
		android:lineSpacingMultiplier="1"
	    android:textColor="#000000"
	    android:layout_marginBottom="5dp"
	    android:textSize="15sp"
        android:text="ssComText" />
    
    <TextView
        android:id="@+id/ssComSource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/ssComText"
        android:layout_below="@id/ssComText"
        android:textColor="#808080"
	    android:textSize="12sp"
        android:text="ssComSource" />
    
    <TextView
        android:id="@+id/ssComComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/ssComSource"
        android:layout_alignBottom="@id/ssComSource"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:textColor="#808080"
	    android:textSize="12sp"
        android:text="TextView" />

   <TextView
        android:id="@+id/ssComRepost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/ssComComment"
        android:layout_toLeftOf="@id/ssComComment"
        android:textColor="#808080"
	    android:textSize="12sp"
        android:text="TextView" />
    
</RelativeLayout>